<h2>Mi Carrito</h2>

{{#if cart.products.length}}
    <div class="cart-items">
        {{#each cart.products}}
            <div class="cart-item">
                <h3>{{this.product.title}}</h3>
                <p>Cantidad: {{this.quantity}}</p>
                <p>Precio Unitario: ${{this.product.price}}</p>
                <p>Subtotal: ${{multiply this.product.price this.quantity}}</p>
                <button class="remove-from-cart-btn" data-cart-id="{{../cart._id}}" data-product-id="{{this.product._id}}">Eliminar</button>
            </div>
        {{/each}}
    </div>
    <div class="cart-summary">
        <h4>Total del Carrito: ${{calculateCartTotal cart.products}}</h4>
        <button class="clear-cart-btn" data-cart-id="{{cart._id}}">Vaciar Carrito</button>
        <button>Finalizar Compra</button>
    </div>
{{else}}
    <p>Tu carrito está vacío.</p>
{{/if}}
